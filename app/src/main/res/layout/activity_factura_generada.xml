<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo_gradiente"
    android:orientation="vertical"
    tools:context=".views.FacturaGeneradaActivity">


    <TextView
        android:id="@+id/textViewFac1"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textViewSerieF2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/facturaGenerada"
        android:textAllCaps="true"
        android:textColor="#F44336"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewFac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textViewSerieF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="#D3A61F"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewFechaEmisionF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewSubtotalF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewIvaF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewTotalF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewEstadoPagoF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewFactura2"
        android:layout_width="match_parent"
        android:layout_height="422dp"
        android:textSize="35sp" />
</LinearLayout>